<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/fieldHeaderTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/FieldHeaderStyle"
        android:text="Field Header"/>

    <TextView
        android:id="@+id/fieldSubHeaderTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/FieldSubHeaderStyle"
        android:visibility="gone"
        android:text="Field Subheader"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:orientation="horizontal">
        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:id="@+id/fieldSeekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/sliderValueTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#dfdfdf"
            android:text="0"/>
    </LinearLayout>

</LinearLayout>