<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:paddingTop="15dp"
              android:paddingBottom="15dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingRight="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/fieldHeaderTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/FieldHeaderStyle"
        android:paddingRight="20dp"
        android:layout_weight="1"
        android:text="Field Header"/>

        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:switchMinWidth="200dp"
            android:switchPadding="10dp"
            android:textColor="#fff"
            android:textOff="OFF"
            android:textOn="ON"
            app:showText="false"
            android:id="@+id/formSwitch"/>
    </LinearLayout>

    <TextView
        android:id="@+id/fieldSubHeaderTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/FieldSubHeaderStyle"
        android:visibility="gone"
        android:text="Field Subheader"/>

</LinearLayout>